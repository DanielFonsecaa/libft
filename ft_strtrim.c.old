#include "libft.h"
#include <stdlib.h>

char	*ft_strtrim(char const *s1, char const *set)
{
	const char	*end;

	if (!s1 || !set)
		return (NULL);
	end = (char *)s1 + ft_strlen(s1) - (*s1 != 0); 
	while (ft_strchr(set, *s1))
		s1++;
	while (end > s1 && ft_strchr(set, *end))
		end--;
	return (ft_substr(s1, 0, end - s1 + 1));
}
