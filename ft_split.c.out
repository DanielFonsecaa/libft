//	j = 0;
//	while (str[j] != c && str[j])
//	{
//		string[j] = str[i + j];
//		j++;
//	}
	string = ft_substr(str, i, j);
	return (string);
}
char	**ft_split(const char *s, char c)
{
	char	**strings;
	size_t	i;
	size_t	j;

	strings = malloc(sizeof(char *) * (ft_count_words((char *)s, c) + 1));
	if (!strings)
		return (NULL);
	i = 0;
	j = 0;
	while (i < ft_count_words((char *)s, c))
	{
		while (s[j] == c && s[j])
			j++;
		if (s[j])
			strings[i] = ft_dup((char *)&s[j], c);
		while (s[j] != c && s[j])
			j++;
		i++;
	}
	strings[i] = 0;
	return (strings);		
}

#include <stdio.h>
int	main()
{
	char *str = "daniel e o maior";
	char **strings = ft_split(str, ' ');
	for(size_t i = 0; i < ft_count_words(str, ' '); i++)
		printf("%s\n", strings[i]);
}
